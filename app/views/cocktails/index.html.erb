<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1>Cocktailerz</h1>
    <p>Cool Cocktailz for Cool Peoplez</p>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <%= link_to(new_cocktail_path) do %>
    <p class="btn btn-default btn-transparent">New Cocktail</p>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4 grow">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.photo.file.nil? ? 'https://source.unsplash.com/random' : cl_image_path(cocktail.photo, height: 300, width: 400, crop: :fill) %>)">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
        <div class="fa-buttons">
          <%= link_to '<i class="fas fas-clickable fa-trash hvr-grow-rotate"></i>'.html_safe, cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        <%= link_to(cocktail) do %>
        <div class="card-link"></div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<p id="notice"><%= notice %></p>




